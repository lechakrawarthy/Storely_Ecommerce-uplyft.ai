# Production Environment Configuration
FLASK_ENV=production
DEBUG=False
SECRET_KEY=your-super-secure-secret-key-here

# Database Configuration (Use PostgreSQL in production)
DATABASE_URL=postgresql://username:password@localhost:5432/bookbuddy_prod

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FILE=/var/log/bookbuddy/api.log

# Chatbot Configuration
MAX_CHAT_HISTORY=50
MAX_PRODUCTS_PER_RESPONSE=6
MAX_SUGGESTIONS_PER_RESPONSE=4

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=30

# NLP Configuration
NLTK_DATA_PATH=/opt/nltk_data

# Cache Configuration (Use Redis in production)
CACHE_TYPE=redis
CACHE_TIMEOUT=600

# Production Frontend URL
FRONTEND_URL=https://yourdomain.com

# Security Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
